{
  "name": "ai-pop-culture-news",
  "version": "1.0.0",
  "description": "AI-powered pop culture news application",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@ai-pop-culture-news/shared && npm run build --workspace=@ai-pop-culture-news/worker",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "start:worker": "npm run start --workspace=@ai-pop-culture-news/worker",
    "dev:worker": "npm run dev --workspace=@ai-pop-culture-news/worker"
  },
  "keywords": [
    "ai",
    "pop-culture",
    "news",
    "automation",
    "wordpress"
  ],
  "author": "AI Culture News Team",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  }
}
